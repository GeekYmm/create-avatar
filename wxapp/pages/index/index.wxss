/* pages/index/index.wxss */

.title_view {
    width: 100%;
    height: 330rpx;
    background: url("https://6176-avatar-200202-1301196270.tcb.qcloud.la/avatar_bg.png?sign=c173995bd9165244f9b6e22a924fb9c7&t=1580635032") no-repeat;
    background-size: 750rpx 300rpx;
}

.open_tag {
    position: relative;
    left: 0;
    top: 32rpx;
    width: 212rpx;
    height: 64rpx;
    background: linear-gradient(270deg, rgba(255, 188, 146, 0.3) 0%, rgba(255, 255, 255, 0.4) 100%);
    border-radius: 0rpx 34rpx 34rpx 0rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    color: #fff;
}

.content_view {
    width: 690rpx;
    height: 200rpx;
    position: relative;
    left: 50%;
    top: 60rpx;
    transform: translateX(-50%);
    background: #fff;
    box-shadow: 0rpx 6rpx 30rpx 0rpx rgba(132, 132, 132, 0.15);
    border-radius: 16rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36rpx;
    color: #ff7116;
}

.content_view text {
    margin: 0 10rpx;
    padding: 6rpx 12rpx;
    border-radius: 6rpx;
    background: #ff7116;
    color: #fff;
    font-weight: bold;
    letter-spacing: 2rpx;
}

.funtion_list {
    display: flex;
    flex-direction: column;
    background: #fff;
    padding-bottom: 50rpx;
}

.funtion_item {
    width: 690rpx;
    height: 260rpx;
    margin: 0 auto;
    border-bottom: 2rpx solid #e6ebf5;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.item_icon {
    width: 220rpx;
    height: 196rpx;
    background: #e6ebf5;
    border-radius: 16rpx;
}

.item_info {
    width: 420rpx;
    height: 200rpx;
    color: #333;
    margin-top: 10rpx;
}

.item_open {
    width: 410rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.item_progress {
    width: 280rpx;
    margin: 20rpx 0 32rpx;
}

.item_description {
    width: 180rpx;
    height: 60rpx;
    font-size: 20rpx;
    line-height: 1.5;
    color: #ff7116;
}

.item_bnt {
    width: 176rpx;
    height: 60rpx;
    background: linear-gradient(130deg, rgba(134, 185, 255, 1) 0%, rgba(94, 110, 255, 1) 100%);
    border-radius: 30rpx;
    font-size: 28rpx;
    color: #fff;
    text-align: center;
    line-height: 60rpx;
}

.has_open {
    background: linear-gradient(130deg, rgba(255, 171, 60, 1) 0%, rgba(255, 127, 94, 1) 100%);
}
